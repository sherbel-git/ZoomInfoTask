@import 'assets/styles/directions.styl'

@font-face
  font-family: OpenSans
  src: url('./assets/fonts/OpenSansHebrew-Regular.ttf')

body
  position: relative
  font-family: OpenSans

:root
  --primary-color: #0287c3
  --light-grey: #777777
  --dark-grey: #353a40

*, input, select, textarea, option, button
  outline: none !important

button:focus
  outline: none !important

.pointer
  cursor: pointer

.w-100p
  width: 100px

.w-200p
  width: 200px

.w-300p
  width: 300px

.w-40
  width: 40%

.w-35
  width: 35%

.w-fit-content
  width: fit-content

.f-12
  font-size: 12px

.f-14
  font-size: 14px

.f-16
  font-size: 16px

.f-18
  font-size: 18px

.f-20
  font-size: 20px

.f-22
  font-size: 22px

.f-35
  font-size: 35px !important

.bold
  font-weight 600

.blue-btn
  background-color var(--primary-blue)
  color #ffffff

.white-text
  color #ffffff

.grey-text
  color: #777777

.primary-text-color
  color var(--primary-color)

.mat-checkbox-inner-container
  margin-right: 0 !important
  margin-left: 8px !important

.title, .sub-title
  color: var(--primary-color)

.title
  text-align center
  font-size: 28px
  font-weight: bold
  line-height: 1.9W

.green-underline
  border-bottom: 2px solid lightGreenColor

.sub-title
  font-size: 20px
  line-height: 1.5w
  font-weight: bold
  padding-right: 3px

.logo
  width: 237px
  cursor: pointer
  outline: none


.tab-list
  color: var(--primary-color)
  display: flex
  margin-bottom: 15px


.tab
  color: var(--primary-color)
  min-width: 120px
  text-align: center

.box-shadow
  box-shadow: 0 3px 3px 2px rgba(0, 0, 0, 0.23)

.icon
  width: 20px
  height: 20px
  cursor: pointer

.main-btn
  border-radius 4px
  background-color: var(--primary-color)
  color: #fff

.grey-btn
  border-radius 4px
  background-color: var(--light-grey)
  color: #fff

.btn:hover
  color: #fff

.secondary-btn
  border-radius 4px
  background-color: var(--primary-blue)
  color: #fff

.reg-btn
  border-radius: 4px
  background-color: var(--light-grey)
  color: #fff

.btn-outline-success
  border: 1px solid white !important
  color: white

.btn-outline-success:hover
  background-color: var(--primary-color)

.card
  background-color: #f8f9fa

.card-header
  background-color: #777777
  font-weight: lighter
  color: white

.table
  direction: rtl

td
  padding: 0.5rem
  border: none
  text-align: center !important
  font-size: 14px

th
  background-color: #777777
  font-weight: lighter
  color: white

/*material*/

.mat-checkbox-checked.mat-accent .mat-checkbox-background,
.mat-checkbox-indeterminate.mat-accent .mat-checkbox-background
  background-color: var(--primary-color)

.mat-dialog-container
  direction: rtl

/*icon animation*/

.fa
  transition: all .3s linear

.clicked
  transform:rotate(180deg)

/*drag & drop*/

.dnd-list
  width: 100%
  min-height: 60px
  display: block

.dnd-list.cdk-drop-list-dragging :not(.cdk-drag-placeholder)
  transition: transform 250ms cubic-bezier(0, 0, 0.2, 1)

.cdk-drag-preview
  direction: rtl
  border-radius: 4px

.cdk-drag-placeholder
  opacity: 0

.dnd-box
  padding: 10px 15px
  margin: 10px 0
  border: solid 1px #ccc
  background-color: #f8f9fa
  border-radius: 5px

.cdk-drag-animating
  transition: transform 250ms cubic-bezier(0, 0, 0.2, 1)

.dnd-list.cdk-drop-list-dragging .dnd-box:not(.cdk-drag-placeholder)
  transition: transform 250ms cubic-bezier(0, 0, 0.2, 1)

.dnd-handle
  color: #777777
  cursor: move

/*scroll-bar*/

::-webkit-scrollbar
  width: 5px

::-webkit-scrollbar-track
  box-shadow: inset 0 0 5px #bbbbbb
  border-radius: 10px

::-webkit-scrollbar-thumb
  background: #b0b0b0
  border-radius: 10px
