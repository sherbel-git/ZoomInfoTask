#content
  width: 80%
  margin: 70px auto

#overlay
  position: absolute
  top: -70px
  height: 100%
  min-height: 100vh
  width: 100%
  background-color: #000
  opacity: 0.2
  z-index: 99999
  pointer-event: none

#spinner
  position: absolute
  top: 100px
  left: 50%
  transform: translate(-50%, 0)
  width: 130px
  z-index: 99999



